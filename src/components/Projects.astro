---
import CssIcon from "../icons/CssIcon.astro";
import FigmaIcon from "../icons/FigmaIcon.astro";
import HtmlIcon from "../icons/HtmlIcon.astro";
import JavaScriptIcon from "../icons/JavaScriptIcon.astro";
import LinkIcon from "../icons/LinkIcon.astro";
import NextJsIcon from "../icons/NextJsIcon.astro";
import TailwindIcon from "../icons/TailwindIcon.astro";
import WordPressIcon from "../icons/WordPressIcon.astro";
import ImagesProjects from "./ImagesProjects.astro";
const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJsIcon,
  },
  TAILWIND: {
    name: "Tailwind Css",
    class: "bg-white text-[#73bcf6]",
    icon: TailwindIcon,
  },
  HTML: {
    name: "HTML",
    class: "bg-[#D5502C] text-white",
    icon: HtmlIcon,
  },
  CSS: {
    name: "CSS",
    class: "bg-[#1471AF] text-white",
    icon: CssIcon,
  },
  JAVASCRIPT: {
    name: "JavaScript",
    class: "bg-[#E1CE50] text-[#323330]",
    icon: JavaScriptIcon,
  },
  WORDPRESS: {
    name: "WordPress",
    class: "bg-[#161616] text-[#ffffff]",
    icon: WordPressIcon,
  },
  FIGMA: {
    name: "Figma",
    class: "bg-[#161616] text-[#ffffff]",
    icon: FigmaIcon,
  },
};
const PROJECTS = [
  {
    title: "Centro Odontoiatrico Colombo",
    description:
      "Proyecto profesional para una clínica dental italiana creada desde cero.",
    link: "https://www.centrodontoiatricocolombo.com/",
    github: "",
    images: ["/projects/centro1.jpg","/projects/centro2.jpg","/projects/centro3.jpg","/projects/centro4.jpg","/projects/centro5.jpg","/projects/centro6.jpg"],
    tags: [TAGS.HTML, TAGS.CSS, TAGS.JAVASCRIPT, TAGS.FIGMA],
  },
  {
    title: "Alkila Trasteros",
    description:
      "Mantenimiento y cambios en el frontend, como también colaboración en la traducción de castellano a catalán.",
    link: "https://alkilatrasteros.es/",
    github: "",
    images: ["/projects/alkila1.jpg","/projects/alkila2.jpg","/projects/alkila3.jpg","/projects/alkila4.jpg","/projects/alkila5.jpg","/projects/alkila6.jpg",],
    tags: [TAGS.WORDPRESS, TAGS.FIGMA],
  },
  {
    title: "PinoPack",
    description:
      "Proyecto profesional para un fabricante de sobres de papel personalizados y sostenibles.",
    link: "https://www.pinopack.com/es/",
    github: "",
    images: ["/projects/pino1.jpg","/projects/pino2.jpg","/projects/pino3.jpg","/projects/pino4.jpg","/projects/pino5.jpg","/projects/pino6.jpg",],
    tags: [TAGS.WORDPRESS, TAGS.FIGMA],
  },
];
---

{
  PROJECTS.map(({ title, description, images, tags, link },index) => (
    <article class="my-5 md:my-10 lg:my-15">
      <h3 class="text-2xl font-semibold mb-2 text-indigo-400/70">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-2 flex-wrap flex-row my-2">
        {tags.map((tag) => (
          <li>
            <span
              class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 items-center`}
            >
              <tag.icon class="size-6" />
              {tag.name}
            </span>
          </li>
        ))
        }
      </ul>

      

      <div id={`gallery${index}`} class="relative w-full" data-carousel="static">
          <!-- Carousel wrapper -->
          <div class="relative h-56 overflow-hidden rounded-lg md:h-96">
            <ImagesProjects images={images} name={title}/>
          </div>
          <!-- Slider controls -->
          <button type="button" class="absolute top-0 start-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-prev>
              <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
                  <svg class="w-4 h-4 text-white dark:text-gray-800 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                      <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 1 1 5l4 4"/>
                  </svg>
                  <span class="sr-only">Previous</span>
              </span>
          </button>
          <button type="button" class="absolute top-0 end-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-next>
              <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-gray-800/30 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
                  <svg class="w-4 h-4 text-gray-800 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                      <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
                  </svg>
                  <span class="sr-only">Next</span>
              </span>
          </button>
      </div>


      <a
        href={link}
        target="_blank"
        class="cursor-pointer relative inline-flex items-center justify-center p-0.5 my-2 me-2 overflow-hidden text-sm font-medium rounded-lg group bg-gradient-to-br from-purple-600 to-blue-500 group-hover:from-purple-600 group-hover:to-blue-500 hover:text-white text-white focus:ring-4 focus:outline-none focus:ring-blue-800"
      >
        <span class="flex items-center gap-x-1 relative px-5 py-1.5 transition-all ease-in duration-75 bg-gray-900 rounded-md group-hover:bg-opacity-0">
          <LinkIcon /> Sitio web
        </span>
      </a>
    </article>
  ))
}
